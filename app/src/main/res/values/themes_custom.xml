<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom Button Styles -->
    <style name="Widget.FiThnity.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.FiThnity.Button</item>
        <item name="android:padding">16dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="backgroundTint">@color/primary</item>
    </style>

    <style name="Widget.FiThnity.Button.Secondary" parent="Widget.FiThnity.Button">
        <item name="backgroundTint">@color/secondary</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Widget.FiThnity.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.FiThnity.Button</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:minHeight">56dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Custom Card Style -->
    <style name="Widget.FiThnity.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
    </style>

    <!-- Custom TextInputLayout Style -->
    <style name="Widget.FiThnity.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <!-- Custom Chip Style -->
    <style name="Widget.FiThnity.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/primary_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="chipCornerRadius">24dp</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.FiThnity.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/primary</item>
        <item name="itemTextColor">@color/primary</item>
        <item name="android:background">@color/surface</item>
    </style>
</resources>
