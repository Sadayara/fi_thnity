<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Profile Header Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardProfile"
            style="@style/Widget.FiThnity.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Profile Photo -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.FiThnity.Card"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp">

                    <ImageView
                        android:id="@+id/ivProfilePhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/primary_light"
                        android:contentDescription="@string/profile_photo"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/ic_menu_myplaces"
                        android:tint="@android:color/white" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Name -->
                <TextView
                    android:id="@+id/tvName"
                    style="@style/TextAppearance.FiThnity.Headline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="John Doe" />

                <!-- Phone Number -->
                <TextView
                    android:id="@+id/tvPhone"
                    style="@style/TextAppearance.FiThnity.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="+216 12 345 678" />

                <!-- Stats -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Rating -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextAppearance.FiThnity.Headline1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.8"
                            android:textColor="@color/primary"
                            android:textSize="28sp" />

                        <TextView
                            style="@style/TextAppearance.FiThnity.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rating" />
                    </LinearLayout>

                    <!-- Total Rides -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvTotalRides"
                            style="@style/TextAppearance.FiThnity.Headline1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/accent"
                            android:textSize="28sp" />

                        <TextView
                            style="@style/TextAppearance.FiThnity.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_rides" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Menu Options -->
        <LinearLayout
            android:id="@+id/layoutMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardProfile">

            <!-- Edit Profile -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardEditProfile"
                style="@style/Widget.FiThnity.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/edit_profile"
                        android:src="@android:drawable/ic_menu_edit"
                        android:tint="@color/primary" />

                    <TextView
                        style="@style/TextAppearance.FiThnity.Body1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="@string/edit_profile" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="Next"
                        android:src="@android:drawable/ic_media_play"
                        android:tint="@color/text_hint" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- My Rides -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMyRides"
                style="@style/Widget.FiThnity.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/my_rides"
                        android:src="@android:drawable/ic_menu_recent_history"
                        android:tint="@color/primary" />

                    <TextView
                        style="@style/TextAppearance.FiThnity.Body1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="@string/my_rides" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="Next"
                        android:src="@android:drawable/ic_media_play"
                        android:tint="@color/text_hint" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Settings -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSettings"
                style="@style/Widget.FiThnity.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/settings"
                        android:src="@android:drawable/ic_menu_preferences"
                        android:tint="@color/primary" />

                    <TextView
                        style="@style/TextAppearance.FiThnity.Body1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="@string/settings" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="Next"
                        android:src="@android:drawable/ic_media_play"
                        android:tint="@color/text_hint" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Logout -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                style="@style/Widget.FiThnity.Button.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/logout"
                app:strokeColor="@color/error" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
